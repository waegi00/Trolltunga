@model Trolltunga.Models.Project

@{
    ViewBag.Title = "Dashboard";
}
<div class="row">
    <div class="col-lg-2 full-height" style="background-color: black">
        @* TODO: Channels *@

        <div class="channel">
            @Html.ActionLink("Add channel", "Create", "Channel", null, new { @class = "channel" })<i class="icon fa fa-plus fa-2x"></i>
        </div>

        @foreach (var channel in Model.Channels)
        {
            <div class="channel">
                @Html.Label(channel.Name, new { @class = "channel" })<i class="icon fa fa-trash fa-2x"></i><i class="icon fa fa-edit fa-2x"></i>
            </div>
        }
    </div>
    <div class="col-lg-10">
        @* TODO: Tasks *@
    </div>
</div>

<script>
    $(document).ready(function () {
        $(window).resize(function () {
            $(".full-height").height($(window).height() - $(".full-height").offset().top);
        });
        $(window).resize();
    });
</script>
